<?xml version="1.0" encoding="utf-8" ?>
<ContentPage
    x:Class="DaWine.ScannedPage"
    xmlns="http://xamarin.com/schemas/2014/forms"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:d="http://xamarin.com/schemas/2014/forms/design"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    NavigationPage.HasNavigationBar="False"
    mc:Ignorable="d">
    <ContentPage.Content>
        <AbsoluteLayout>
            <Image
                x:Name="uiImage"
                Aspect="Fill"
                HorizontalOptions="Center"
                Source="uiScanned.png"
                VerticalOptions="Center" />
            <Button
                Margin="150,515"
                Clicked="onScanAgainButton_Clicked"
                HeightRequest="90"
                Opacity="0"
                WidthRequest="90" />
            <Button
                Margin="20,565"
                Clicked="OnBackClicked"
                HeightRequest="60"
                Opacity="0"
                WidthRequest="90" />
            <Button
                x:Name="nextButton"
                Margin="260,565"
                Clicked="onNextButton_Clicked"
                HeightRequest="60"
                Opacity="0"
                WidthRequest="90" />
        </AbsoluteLayout>
    </ContentPage.Content>
</ContentPage>